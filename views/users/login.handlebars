
     <section class="container">
      <h1 class="large text-primary">Login</h1>
      <p class="lead"><i class="fas fa-user"></i>Faça login em sua conta</p>
      <form id="form-login" class="form" method="POST" action="/users/login">
        <div class="form-group">
          <input type="email" id="email" placeholder="Email" name="email" required>
        </div>
        <div class="form-group">
          <input type="password" id="password" placeholder="Password" name="password" required>
        </div>
        <input type="submit" class="btn btn-primary" value="Login">
      </form>
      <p class="my-1">
        Não possui uma conta? <a href="/user/register">Cadastrar</a>
      </p>
    </section>